{
  "manifest_version": 2,
  "name": "Chrome Magnifier",
  "version": "0.1",

  "description": "Adds a magnifying glass over the website",
  "icons": {},

  "browser_action": {
    "default_icon": "images/glass.png",
    "default_title": "Chrome Magnifier"
  },

  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "js": ["content.js"]
    }
  ]

}
